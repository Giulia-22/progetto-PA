
#ifndef PERSONA_H_
#define PERSONA_H_

class Persona {
public:
	int annonascita;
	char* cf;
private:
	char* nome;
	char* cognome;
public:
	Persona(int, char*, char*, char*);
	virtual ~Persona();
	int getAnnonascita() const;
	void setAnnonascita(int annonascita);
	char* getCf() const;
	void setCf(char *cf);
	char* getCognome() const;
	void setCognome(char *cognome);
	char* getNome() const;
	void setNome(char *nome);
};

#endif /* PERSONA_H_ */
