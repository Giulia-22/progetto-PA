	  // Paziente* nuovo = static_cast<Paziente*>(a);

		return false;
	else return true;
}

static bool compareBySpecializzazione(dottore_ref &a, dottore_ref &b) {
	return a->getSpecializzazione() < b->getSpecializzazione();
}
