
#include "Persona.h"

Persona::Persona(int a, string codfisc, char* n, char* c) {
	this->annonascita = a;
	this->cf = codfisc;
	this->nome = n;
	this->cognome = c;
}

int Persona::getAnnonascita() const {
	return this->annonascita;
}

void Persona::setAnnonascita(int a) {
	this->annonascita = a;
}

string Persona::getCf() {
	return this->cf;
}

void Persona::setCf(char *codfisc) {
	this->cf = cf;
}

char* Persona::getCognome() const {
	return cognome;
}

void Persona::setCognome(char *c) {
	this->cognome = c;
}

char* Persona::getNome() const {
	return this->nome;
}

void Persona::setNome(char *n) {
	this->nome = n;
}
// overloading
void Persona::stampa(){
	cout<<"Nome: "<<nome<<endl;
	cout<<"Cognome: "<<cognome<<endl;
	cout<<"Anno di nascita: "<<annonascita<<endl;
	cout<<"Codifce fiscale: "<<cf<<endl<<endl;
}

void Persona::stampa(vector<Persona> p){
	for(vector<Persona>::iterator i = p.begin(); i != p.end(); ++i){
		cout<<"Nome: "<<i->nome<<endl;
		cout<<"Cognome: "<<i->cognome<<endl;
		cout<<"Anno di nascita: "<<i->annonascita<<endl;
		cout<<"Codifce fiscale: "<<i->cf<<endl<<endl;
	}
}

Persona::~Persona() {
}

