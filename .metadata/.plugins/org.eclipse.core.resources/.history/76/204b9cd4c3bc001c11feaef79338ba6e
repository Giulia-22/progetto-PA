
#ifndef PERSONA_H_
#define PERSONA_H_

using namespace std;

class Persona {
public:
	int annonascita;
	char* cf;
protected:
	char* nome;
	char* cognome;
public:
	Persona(int, char*, char*, char*);
	int getAnnonascita() const;
	void setAnnonascita(int);
	char* getCf() const;
	void setCf(char*);
	char* getCognome() const;
	void setCognome(char*);
	char* getNome() const;
	void setNome(char*);
	void stampa();
	virtual ~Persona();
};

#endif /* PERSONA_H_ */
