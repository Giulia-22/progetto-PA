	return a->getIdPaz() < b->getIdPaz();
}

static bool compareByID(dottore_ref &a, dottore_ref &b) {
	return a->getIdDott() < b->getIdDott();
}
*/


#endif /* FUNZIONALITA_COMPARATORI_H_ */
