
#include "PetMr.h"

PetMr::PetMr() {

}

PetMr::PetMr(int du_pet,int du_mr,int intensit,dottore_ref dottp,dottore_ref dottm,paziente_ref paz):Pet(du_pet,dottp,paz),Mr(du_mr,intensit,dottm,paz) {

}


int PetMr::getDurata(){
	return Pet::durata+Mr::durata;
}

int PetMr::getDurataPet(){
	return Pet::durata;
}

int PetMr::getDurataMr(){
	return Mr::durata;
}

void PetMr::stampa(){
	cout<<"ID esame PET/MR: "<<this->getIdEsame()<<endl;
	cout<<"Durata totale prevista: "<<this->getDurata()<<endl;
	cout<<"INFORMAZIONI PET: "<<endl;
	//this->Pet::stampa();
	cout<<"ID esame PET: "<<this->Pet::getIdEsame()<<endl;
	cout<<"Durata prevista: "<<this->Pet::durata<<endl;
	cout<<"Eseguito dal dottore: "<<endl;
	this->getDott()->stampa();
	cout<<"Paziente: "<<endl;
	this->getPaz()->stampa();
	cout<<endl<<endl;
	cout<<"INFORMAZIONI MR: "<<endl;
	this->Mr::stampa();
}

PetMr::~PetMr() {

}

