
#include "Pet.h"

Pet::Pet() {
	this->durata = 30;
}

Pet::Pet(Pet* pet_p) {
	this->durata = pet_p->durata;
	this->d->annonascita = pet_p->d->getAnnonascita();
	this->d->cf = pet_p->d->getCf();
	this->d->nome = pet_p->d->getNome();
	this->d->cognome = pet_p->d->getCognome();
	this->d->ID_dott = ID_dott_count++;
	this->d->specializzazione = "";
	this->p->annonascita = pet_p->p->getAnnonascita();
	this->p->cf = pet_p->p->getCf();
	this->p->nome = pet_p->p->getNome();
	this->p->cognome = pet_p->p->getCognome();
	this->p->ID_paz = ID_paz_count++;
	this->p->categoria = "";
}

Pet::Pet(int du,dottore_ref dr,paziente_ref pr):Esame(dr,pr){
	this->durata = du;
}

void Pet::setDurata(int d) {
	this->durata = d;
}

int Pet::getDurata() {
	return durata;
}


void Pet::stampa(){
	cout<<"ID esame PET: "<<this->getIdEsame()<<endl;
	cout<<"Durata prevista: "<<this->durata<<endl;
	cout<<"Eseguito dal dottore: "<<endl;
	this->getDott()->stampa();
	cout<<"Paziente: "<<endl;
	this->getPaz()->stampa();
	cout<<endl<<endl;
}


Pet::~Pet() {

}

