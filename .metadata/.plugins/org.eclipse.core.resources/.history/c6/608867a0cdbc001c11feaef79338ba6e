
#ifndef PERSONA_H_
#define PERSONA_H_

#include <iostream>
#include <vector>
using namespace std;

class Persona {
public:
	int annonascita;
	string cf;
protected:
	char* nome;
	char* cognome;
public:
	Persona(int, string, char*, char*);
	int getAnnonascita() const;
	void setAnnonascita(int);
	string getCf() const;
	void setCf(char*);
	char* getCognome() const;
	void setCognome(char*);
	char* getNome() const;
	void setNome(char*);
	void stampa();
	void stampa(vector<Persona>);
	virtual ~Persona();
};

#endif /* PERSONA_H_ */
