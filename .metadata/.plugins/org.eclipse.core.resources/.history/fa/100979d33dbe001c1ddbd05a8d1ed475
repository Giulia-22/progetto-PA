
#ifndef FUNZIONALITA_COMPARATORI_H_
#define FUNZIONALITA_COMPARATORI_H_
#include <iostream>
#include <vector>
#include <string>
#include <memory>
#include <algorithm>
#include "../Utenti/Persona.h"
#include "../Utenti/Paziente.h"
#include "../Utenti/Dottore.h"

using namespace std;

class Comparatori {
public:
	friend class Metodi;

	Comparatori();

	static bool compareByCategoria(paziente_ref &, paziente_ref &);

	static bool compareBySpecializzazione(dottore_ref &, dottore_ref &);

	virtual bool compareByID(paziente_ref &, paziente_ref &);

	virtual bool compareByID(dottore_ref &, dottore_ref &);

	virtual ~Comparatori();
};

#endif /* FUNZIONALITA_COMPARATORI_H_ */
