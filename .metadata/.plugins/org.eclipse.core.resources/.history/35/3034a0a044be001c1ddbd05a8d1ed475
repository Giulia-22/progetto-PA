
#ifndef VISITE_ESAME_H_
#define VISITE_ESAME_H_

#include <iostream>
#include <vector>
#include <string>
#include <memory>
#include "../Utenti/Persona.h"
#include "../Utenti/Paziente.h"
#include "../Utenti/Dottore.h"

using namespace std;

static int ID_esame_count = 0;

class Esame {
public:
	int ID_esame = ID_esame_count;
	int durata;
	Dottore d;
	Paziente p;

	const Dottore& getD() const;
	void setD(const Dottore &d);
	int getDurata() const;
	void setDurata(int durata);
	int getIdEsame() const;
	const Paziente& getP() const;
	void setP(const Paziente &p);

protected:
	Esame();
	virtual ~Esame();
};

