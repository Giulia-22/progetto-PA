
#ifndef PERSONA_H_
#define PERSONA_H_

#include <iostream>
#include <memory>
#include <vector>
#include <ctime>
using namespace std;

class Persona {
public:
	int annonascita = 1900;
	string cf;
	friend class Metodi;
	friend class Paziente;
protected:
	string nome;
	string cognome;
private:
	time_t data = localtime(&data);
	int annocorrente = tm_year(data);
protected:
	Persona();
	Persona(int, string, string, string);
	Persona(Persona*);
	void setAnnonascita(int);
	void setCf(string);
	void setCognome(string);
	void setNome(string);
public:
	int getAnnonascita();
	string getCf();
	string getCognome();
	string getNome();
	void stampa();
	virtual ~Persona();
};

typedef unique_ptr<Persona> persona_ref;

#endif /* PERSONA_H_ */
